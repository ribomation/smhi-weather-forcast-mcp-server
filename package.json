{
  "name": "smhi-weather-forcast-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for SMHI weather forecasts and observations",
  "type": "module",
  "main": "dist/smhi-weather-forcast-mcp-server.js",
  "bin": {
    "smhi-weather-server": "dist/smhi-weather-forcast-mcp-server.js"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/smhi-weather-forcast-mcp-server.js --banner:js=\"#!/usr/bin/env node\"",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/smhi-weather-forcast-mcp-server.js",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "esbuild": "^0.27.3",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
